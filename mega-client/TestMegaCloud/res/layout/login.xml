<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

 
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editUsername"
            android:layout_alignRight="@+id/editUsername"
            android:layout_below="@+id/editUsername"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:inputType="textPassword"
            android:text="@string/password" />

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="@string/username" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher" />

        <CheckBox
            android:id="@+id/checkAutoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editPassword"
            android:layout_alignRight="@+id/editPassword"
            android:layout_below="@+id/editPassword"
            android:text="@string/AutoLogin" />

        <CheckBox
            android:id="@+id/CheckLimitedAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkAutoLogin"
            android:layout_alignRight="@+id/checkAutoLogin"
            android:layout_below="@+id/checkAutoLogin"
            android:text="@string/autologinaccessrule" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/CheckLimitedAccess"
            android:layout_alignRight="@+id/CheckLimitedAccess"
            android:layout_below="@+id/CheckLimitedAccess"
            android:layout_marginTop="20dp"
            android:text="@string/Login" />

    </RelativeLayout>

</LinearLayout>